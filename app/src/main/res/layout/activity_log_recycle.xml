<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.gogreen.LogRecycleActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tvLogNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Materials Recycled"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:layout_toLeftOf="@+id/spMaterial"
        android:layout_toStartOf="@+id/spMaterial"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLogNum"
        android:layout_alignStart="@+id/tvLogNum"
        android:layout_below="@+id/tvLogNum"
        android:paddingTop="1dp"
        android:text="You get 1 point for every material you recycle." />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Number"
        android:layout_below="@+id/textView6" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="number of recyclables"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:layout_alignTop="@+id/tvNumber"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="DOne"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tvMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvNumber"
        android:layout_alignStart="@+id/tvNumber" />

    <Spinner
        android:id="@+id/spMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/materials"
        android:layout_alignTop="@+id/tvMaterial"
        android:layout_alignLeft="@+id/etNumber"
        android:layout_alignStart="@+id/etNumber" />



</RelativeLayout>
