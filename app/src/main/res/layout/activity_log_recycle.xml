<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.codepath.gogreen.LogRecycleActivity">

    <TextView
        android:id="@+id/tvLogNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Number of Materials Recycled"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLogNum"
        android:layout_marginTop="46dp"

        android:text="Number" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="number of recyclables"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/tvNumber"
        android:layout_alignBottom="@+id/tvNumber"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="DOne" />

    <TextView
        android:id="@+id/tvMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNumber"
        android:layout_marginTop="30dp"
        android:text="Material" />

    <Spinner
        android:id="@+id/spMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvMaterial"
        android:layout_alignEnd="@+id/etNumber"
        android:layout_alignLeft="@id/etNumber"
        android:layout_alignRight="@+id/etNumber"
        android:layout_alignStart="@id/etNumber"
        android:entries="@array/materials" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLogNum"
        android:layout_marginTop="1dp"
        android:text="You get 1 point for every material you recycle." />


</RelativeLayout>
