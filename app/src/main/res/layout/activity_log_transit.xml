<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flMap">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flMap"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">


        <ToggleButton
            android:id="@+id/start_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/offWhite"
            android:textOff="Start Tracking"
            android:textOn="Stop Tracking"
            android:layout_gravity="bottom"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_tracking"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="0"
            android:layout_alignBottom="@+id/spVehicle"
            android:layout_alignStart="@+id/start_tracking"
            android:layout_alignLeft="@+id/start_tracking" />

        <Spinner
            android:layout_width="5dp"
            android:id="@+id/spVehicle"
            android:layout_height="wrap_content"
            android:entries="@array/transportation_types"
            android:layout_alignParentTop="false"
            android:layout_toEndOf="@+id/distance"
            android:layout_alignEnd="@id/start_tracking"
            android:layout_below="@id/start_tracking"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/distance"
            android:layout_alignRight="@id/start_tracking" />

    </RelativeLayout>

</RelativeLayout>