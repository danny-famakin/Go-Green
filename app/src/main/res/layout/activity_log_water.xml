    <TextView
        android:id="@+id/tvPointsCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="8dp"
        android:text="The average American shower lasts 8.2 minutes. Earn points for every minute under that length!" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="00:00:00"
        android:textColor="@color/colorAccentDark"
        android:textSize="55sp"
        android:layout_below="@+id/tvPointsCaption"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btStartPause"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/offWhite"
        android:text="Start"
        android:layout_below="@+id/tvTimer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btStartPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="minimum (believable) shower time: 30 s"
        android:textColor="@color/red"
        android:visibility="gone" />


